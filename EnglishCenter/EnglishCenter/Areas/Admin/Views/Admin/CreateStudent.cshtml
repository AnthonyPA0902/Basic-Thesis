@model EnglishCenter.Models.Student
@{
    ViewBag.Title = "CreateStudent";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="padding-top : 2%">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="color:cornflowerblue;">THÊM HỌC SINH MỚI </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        Thông Tin Học Sinh
                    </div>
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="form-group">
                                <h3>@ViewBag.ThongBao</h3>
                            </div>
                        }
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">

                                @using (Html.BeginForm("CreateStudent", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label class="text">
                                            TÊN HỌC SINH
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên Học Sinh" } })
                                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="text">
                                            TÊN TIẾNG ANH
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.englishName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên Tiếng Anh" } })
                                            @Html.ValidationMessageFor(model => model.englishName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="text">
                                            NGÀY SINH
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.birthday, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ngày Sinh" } })
                                            @Html.ValidationMessageFor(model => model.birthday, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="text">
                                            GIỚI TÍNH
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.gender, new { htmlAttributes = new { @class = "form-control", @placeholder = "Giới Tính" } })
                                            @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="text">
                                            NGƯỜI LIÊN HỆ
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.contactPerson, new { htmlAttributes = new { @class = "form-control", @placeholder = "Người Liên Hệ" } })
                                            @Html.ValidationMessageFor(model => model.contactPerson, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="text">
                                            ĐIỆN THOẠI
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Số Điện Thoại" } })
                                            @Html.ValidationMessageFor(model => model.telephone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="text">
                                            TÊN ĐĂNG NHẬP
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên Đăng Nhập" } })
                                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="text">
                                            MẬT KHẨU
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật Khẩu" } })
                                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="text">
                                            MÃ KHÓA HỌC
                                        </label>
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.courseID, (SelectList)ViewBag.CourseList, "Chọn khóa học", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.courseID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <hr />
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Thêm Mới" class="btn btn-primary" />
                                            <a href="~/Admin/Admin/StudentList"><input type="button" value="Hủy" class="btn btn-primary" /></a>
                                        </div>
                                    </div>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>