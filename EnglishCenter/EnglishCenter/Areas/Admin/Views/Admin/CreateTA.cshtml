@model EnglishCenter.Models.TA
@{
    ViewBag.Title = "CreateTA";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div style="padding-top : 2%">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="color:cornflowerblue;">THÊM TRỢ GIẢNG MỚI </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        Thông Tin Trợ Giảng
                    </div>
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="form-group">
                                <h3>@ViewBag.ThongBao</h3>
                            </div>
                        }
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @using (Html.BeginForm("CreateTA", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label class="text">
                                                TÊN TRỢ GIẢNG
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên Trợ Giảng" } })
                                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                GIỚI TÍNH
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.gender, new { htmlAttributes = new { @class = "form-control", @placeholder = "Giới Tính" } })
                                                @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                ĐIỆN THOẠI
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điện Thoại" } })
                                                @Html.ValidationMessageFor(model => model.telephone, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                TÊN ĐĂNG NHẬP
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên Đăng Nhập" } })
                                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                MẬT KHẨU
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật Khẩu" } })
                                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <hr />
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Thêm Mới" class="btn btn-primary" />
                                                <a href="~/Admin/Admin/TAList"><input type="button" value="Hủy" class="btn btn-primary" /></a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
