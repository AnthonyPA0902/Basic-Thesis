@model EnglishCenter.Models.Course
@{
    ViewBag.Title = "EditCourse";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="padding-top : 2%">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="color:cornflowerblue;">CHỈNH SỬA THÔNG TIN </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        Thông Tin Khóa Học
                    </div>
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="form-group">
                                <h3>@ViewBag.ThongBao</h3>
                            </div>
                        }
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">

                                @using (Html.BeginForm("EditCourse", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label class="text">
                                                TÊN KHÓA HỌC
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên Khóa Học" } })
                                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                CẤP HỌC
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.courseLevel, new { htmlAttributes = new { @class = "form-control", @placeholder = "Cấp Học" } })
                                                @Html.ValidationMessageFor(model => model.courseLevel, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                CHƯƠNG TRÌNH
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.module, new { htmlAttributes = new { @class = "form-control", @placeholder = "Chương Trình" } })
                                                @Html.ValidationMessageFor(model => model.module, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                THỜI GIAN
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.duration, new { htmlAttributes = new { @class = "form-control", @placeholder = "Thời Gian" } })
                                                @Html.ValidationMessageFor(model => model.duration, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                NGÀY BẮT ĐẦU
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.beginDay, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ngày Bắt Đầu" } })
                                                @Html.ValidationMessageFor(model => model.beginDay, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                NGÀY KẾT THÚC
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.endDay, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ngày Kết Thúc" } })
                                                @Html.ValidationMessageFor(model => model.endDay, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                NGÀY HỌC
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ngày Học" } })
                                                @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                PHÒNG
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.room, new { htmlAttributes = new { @class = "form-control", @placeholder = "Phòng" } })
                                                @Html.ValidationMessageFor(model => model.room, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                GIÁO VIÊN
                                            </label>
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.teacherID, (SelectList)ViewBag.TeacherList, "Chọn Giáo Viên", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.teacherID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                TRỢ GIẢNG
                                            </label>
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.TA_ID, (SelectList)ViewBag.TAList, "Chọn Trợ Giảng", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.TA_ID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <hr />
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Cập Nhật" class="btn btn-primary" />
                                                <a href="~/Admin/Admin/CourseList"><input type="button" value="Hủy" class="btn btn-primary" /></a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>