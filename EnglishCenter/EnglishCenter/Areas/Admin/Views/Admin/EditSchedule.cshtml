@model EnglishCenter.Models.Course_Schedule
@{
    ViewBag.Title = "EditSchedule";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="padding-top : 2%">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="color:cornflowerblue;">CHỈNH SỬA THÔNG TIN </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        Thông Tin Lịch Học
                    </div>
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="form-group">
                                <h3>@ViewBag.ThongBao</h3>
                            </div>
                        }
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">

                                @using (Html.BeginForm("EditSchedule", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label class="text">
                                                BÀI HỌC SỐ
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.lesson, new { htmlAttributes = new { @class = "form-control", @placeholder = "Bài Học Số" } })
                                                @Html.ValidationMessageFor(model => model.lesson, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                NGÀY
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ngày" } })
                                                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                MỤC VÀ CẤP HỌC
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.unit_and_grade, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mục và Cấp Học" } })
                                                @Html.ValidationMessageFor(model => model.unit_and_grade, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                MỤC TIÊU BÀI HỌC
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.lessonAims, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mục Tiêu Bài Học" } })
                                                @Html.ValidationMessageFor(model => model.lessonAims, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                Ghi Chú
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.notes, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ghi Chú" } })
                                                @Html.ValidationMessageFor(model => model.notes, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                GIÁO VIÊN
                                            </label>
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.teacher, (SelectList)ViewBag.TeacherList, "Chọn Giáo Viên", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.teacher, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                TRỢ GIẢNG
                                            </label>
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.TA, (SelectList)ViewBag.TAList, "Chọn Trợ Giảng", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.TA, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                KHÓA HỌC
                                            </label>
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.courseId, (SelectList)ViewBag.CourseList, "Chọn Khóa Học", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.courseId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <hr />
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Cập Nhật" class="btn btn-primary" />
                                                <a href="~/Admin/Admin/CourseList"><input type="button" value="Hủy" class="btn btn-primary" /></a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
