@model EnglishCenter.Models.Manager
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
        <fieldset>
            <section class="vh-100" style="background-color: #9A616D;">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col col-xl-10">
                            <div class="card" style="border-radius: 1rem;">
                                <div class="row g-0">
                                    <div class="col-md-6 col-lg-5 d-none d-md-block">
                                        <img src="~/Areas/Admin/assets/img/manager.jpeg"
                                             alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                                    </div>
                                    <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                        <div class="card-body p-4 p-lg-5 text-black">
                                            <form>
                                                <div class="d-flex align-items-center mb-3 pb-1">
                                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                                    <span class="h1 fw-bold mb-0">Shining Star Dashboard</span>
                                                </div>

                                                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng Nhập Vào Tài Khoản Của Bạn</h5>

                                                <div class="form-outline mb-4">
                                                    @Html.LabelFor(model => model.username)
                                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tài Khoản" } })
                                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-outline mb-4">
                                                    @Html.LabelFor(model => model.password, new { @class = "control-label" })<br />
                                                    <div class="input-group">
                                                        @Html.PasswordFor(model => model.password, new { @class = "form-control", @placeholder = "Mật Khẩu" })
                                                        <div class="input-group-append">
                                                        </div>
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="pt-1 mb-4">
                                                    <button class="btn btn-dark btn-lg btn-block" type="submit">Đăng Nhập</button>
                                                </div>

                                                <a href="#!" class="small text-muted">Điều Khoản Sử Dụng</a>
                                                <a href="#!" class="small text-muted">Chính Sách Bảo Mật</a>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </fieldset>
    }
    </body>
</html>
