@model EnglishCenter.Models.Student
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
        <fieldset>
            <section class="h-100 gradient-form" style="background-color: #eee;">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-xl-10">
                            <div class="card rounded-3 text-black">
                                <div class="row g-0">
                                    <div class="col-lg-6">
                                        <div class="card-body p-md-5 mx-md-4">

                                            <div class="text-center">
                                                <img src="~/Images/Shinning Star Picture.png" style="width: 185px;" alt="logo">
                                                <h4 class="mt-1 mb-5 pb-1">HỌC SINH ĐĂNG NHẬP</h4>
                                            </div>

                                            <form>
                                                <p>Hãy Đăng Nhập Vào Tài Khoản Của Bạn</p>

                                                <div class="form-outline mb-4">
                                                    @Html.LabelFor(model => model.username)
                                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tài Khoản" } })
                                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-outline mb-4">
                                                    @Html.LabelFor(model => model.password, new { @class = "control-label" })<br />
                                                    <div class="input-group">
                                                        @Html.PasswordFor(model => model.password, new { @class = "form-control", @placeholder = "Mật Khẩu" })
                                                        <div class="input-group-append">
                                                        </div>
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="text-center pt-1 mb-5 pb-1">
                                                    <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit" value="Login">
                                                        Đăng Nhập
                                                    </button>
                                                </div>

                                            </form>

                                            <div class="form-group">
                                                @Html.ActionLink("Giáo Viên Đăng Nhập", "Login", "Teacher")
                                            </div>
                                            <br />
                                            <div class="form-group">
                                                @Html.ActionLink("Quay Về Trang Chủ", "Index", "Home")
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-lg-6 d-flex align-items-center .bg-info.bg-gradient">
                                        <div class="text-black px-3 py-4 p-md-5 mx-md-4">
                                            <img width="400" height="600" src="~/Images/student.jpg" alt="Student" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </fieldset>
    }
</body>
</html>
