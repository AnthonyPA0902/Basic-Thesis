@model EnglishCenter.Models.Attendance
@{
    ViewBag.Title = "CreateAttend";
    Layout = "~/Views/Shared/Teacher_Layout.cshtml";

    int courseId = Convert.ToInt32(Request.QueryString["courseId"]);
}

<div class="container">
    <div style="padding-top : 2%">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="color:cornflowerblue;">ADD NEW ATTEND </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        ATTEND INFORMATION
                    </div>
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="form-group">
                                <h3>@ViewBag.ThongBao</h3>
                            </div>
                        }
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">

                                @using (Html.BeginForm("CreateAttend", "Teacher", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label class="text">
                                               LESSON
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.lesson, new { htmlAttributes = new { @class = "form-control", @placeholder = "Lesson" } })
                                                @Html.ValidationMessageFor(model => model.lesson, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                DATE
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date" } })
                                                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                ATTEND
                                            </label>
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.attend, ViewBag.AttendOptions as SelectList, "Select Attendance", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.attend, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                STUDENT
                                            </label>
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.studentId, (SelectList)ViewBag.StudentList, "Choose Student", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.studentId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                COURSE
                                            </label>
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.courseId, (SelectList)ViewBag.CourseList, "Choose Course", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.courseId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <hr />
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Add New" class="btn btn-primary" />
                                                <a href="~/Teacher/Attendance?courseId=@courseId"><input type="button" value="Cancel" class="btn btn-primary" /></a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
