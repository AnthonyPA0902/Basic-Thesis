@model EnglishCenter.Models.Attendance
@{
    ViewBag.Title = "DeleteAttend";
    Layout = "~/Views/Shared/Teacher_Layout.cshtml";
    int courseId = Convert.ToInt32(Request.QueryString["courseId"]);
}

<div class="container" style="padding-left: 5%; padding-top: 2%">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="font-weight:bold; font-size:20px">
                    <img src="~/Areas/Admin/assets/img/error.png" width="30" height="30" />
                   Check Information Before Deleting
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div>
                                <table class="table">
                                    <tr>
                                        <td>
                                            Lesson
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.lesson)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Date
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.date)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Student Name
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.Student.englishName)
                                        </td>
                                    </tr>

                                </table>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.HiddenFor(model => model.courseId)

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Delete" class="btn btn-primary" />
                                        </div>
                                    </div>
                                }

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
