@model EnglishCenter.Models.Grade
@{
    ViewBag.Title = "DeleteGrade";
    Layout = "~/Views/Shared/Teacher_Layout.cshtml";
    int courseId = Convert.ToInt32(Request.QueryString["courseId"]);
}

<div class="container" style="padding-left: 5%; padding-top: 2%">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="font-weight:bold; font-size:20px">
                    <img src="~/Areas/Admin/assets/img/error.png" width="30" height="30" />
                    Check Information Before Deleting
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div>
                                <table class="table">
                                    <tr>
                                        <td>
                                            Attendance
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.attendance)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Course Project
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.courseProject)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Homework
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.homework)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            MMT
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.MMT)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            EOMT
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.EOMT)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Total
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.total)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Student Name
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.Student.englishName)
                                        </td>
                                    </tr>

                                </table>


                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.HiddenFor(model => model.courseId)

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Delete" class="btn btn-primary" />
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>